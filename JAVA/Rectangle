package Circle;
import java.util.Scanner;
public class Client {
	public static void main(String[] args)
	{
	Scanner sc = new Scanner(System.in);
	System.out.print("Enter the radius : ");
	double v = sc.nextDouble();
	Circle C = new Circle();
	
	C.SetRadius(v);
	System.out.print("The Circle Radius is "+C.GetRadius()+"\n");
	System.out.print("The Circle  Area  is "+C.GetArea());
}
}
